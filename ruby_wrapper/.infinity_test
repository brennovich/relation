#!/usr/bin/env ruby
infinity_test do
  
  before(:all) { system('rake compile') }

  after(:all) { system("rake clean_and_clobber_without_verbose") }

  use :test_framework => :rspec, :rubies => %w(1.9.2)

  heuristics do
    add("^ext/*/(.*)\.c") do |file|
      run :all => :tests
    end
    add("^ext/*/(.*)\.h") do |file|
      run :all => :tests
    end
  end
end
